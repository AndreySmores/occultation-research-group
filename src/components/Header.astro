---
interface Props {
  currentPage?: 'home' | 'results' | 'news' | 'about';
}
const { currentPage } = Astro.props;
---

<header class="header" role="banner">
  <div class="container">
    <div class="header-content">
      <h1 class="site-title">
        <a href="/" style="color: inherit; text-decoration: none;">The Occultation Group at UVA</a>
      </h1>
      <nav class="nav" role="navigation" aria-label="Main navigation">
        <a href="/" aria-current={currentPage === 'home' ? 'page' : undefined}>Home</a>
        <a href="/results" aria-current={currentPage === 'results' ? 'page' : undefined}>Results</a>
        <a href="/news" aria-current={currentPage === 'news' ? 'page' : undefined}>News</a>
        <a href="/about" aria-current={currentPage === 'about' ? 'page' : undefined}>About</a>
      </nav>
    </div>
  </div>
</header>
