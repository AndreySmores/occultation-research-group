---
import { getCollection } from 'astro:content';

const newsPosts = await getCollection('news');
const sortedPosts = newsPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<div class="news-section">
  <h2>Latest News</h2>
  {sortedPosts.length > 0 ? (
    <div class="news-list">
      {sortedPosts.map((post) => (
        <article class="news-item">
          <header class="news-header">
            <time class="news-date" datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            <h3 class="news-title">{post.data.title}</h3>
          </header>
          
          {post.data.image && (
            <div class="news-image">
              <img 
                src={post.data.image} 
                alt={`Image for ${post.data.title}`}
                loading="lazy"
              />
            </div>
          )}

          {post.data.video && (
            <div class="news-video">
              <video controls preload="metadata">
                <source src={post.data.video} type="video/mp4" />
                Your browser does not support the video tag.
              </video>
            </div>
          )}

          {post.data.youtube && (
            <div class="news-youtube">
              <iframe 
                src={`https://www.youtube.com/embed/${post.data.youtube}`}
                title={`YouTube video for ${post.data.title}`}
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
                loading="lazy"
              ></iframe>
            </div>
          )}

          <div class="news-content">
            {post.data.summary && (
              <p class="news-summary">{post.data.summary}</p>
            )}
            
            <div class="news-excerpt">
              <p>{post.body.split('\n\n')[0].substring(0, 300)}...</p>
            </div>
            
            <a href={`/news/${post.slug}/`} class="read-more-link">
              Read full article â†’
            </a>
          </div>
        </article>
      ))}
    </div>
  ) : (
    <div class="empty-state">
      <p>No news posts available yet. Check back soon for updates!</p>
    </div>
  )}
</div>

<style>
  .news-section {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1.5rem;
  }

  h2 {
    margin: 0 0 1.5rem 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    border-bottom: 2px solid var(--accent-color);
    padding-bottom: 0.5rem;
  }

  .news-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .news-item {
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: 8px;
    transition: background-color 0.2s ease;
  }

  .news-item:hover {
    background: var(--bg-hover);
  }

  .news-header {
    margin-bottom: 1rem;
  }

  .news-date {
    display: block;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .news-title {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.3;
  }

  .news-image,
  .news-video {
    margin: 1rem 0;
    border-radius: 6px;
    overflow: hidden;
  }

  .news-image img,
  .news-video video {
    width: 100%;
    height: auto;
    display: block;
  }

  .news-youtube {
    margin: 1rem 0;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
  }

  .news-youtube iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .news-content {
    margin-top: 1rem;
  }

  .news-summary {
    margin: 0 0 1rem 0;
    color: var(--text-primary);
    line-height: 1.5;
  }

  .news-excerpt {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .read-more-link {
    display: inline-flex;
    align-items: center;
    color: var(--accent-color);
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .read-more-link:hover {
    color: var(--accent-hover);
  }

  .read-more-link:focus {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .empty-state {
    text-align: center;
    padding: 2rem;
    color: var(--text-secondary);
    font-style: italic;
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .news-item {
      transition: none;
    }
    
    .read-more-link {
      transition: none;
    }
  }
</style>
