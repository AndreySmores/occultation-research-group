---
import '../styles/global.css';
import OccultationMaps from '../components/OccultationMaps.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Interactive maps showing occultation observation locations around the world" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Occultation Observation Maps - Occultation Group at UVA</title>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <header class="header" role="banner">
      <div class="container">
        <div class="header-content">
          <h1 class="site-title">
            <a href="/" style="color: inherit; text-decoration: none;">Occultation Group at UVA</a>
          </h1>
          <nav class="nav" role="navigation" aria-label="Main navigation">
            <a href="/">Home</a>
            <a href="/results">Results</a>
            <a href="/news">News</a>
            <a href="/about">About</a>
          </nav>
        </div>
      </div>
    </header>

    <main id="main-content" class="main" role="main">
      <div class="container">
        <div class="maps-page">
          <header class="maps-page-header">
            <nav class="breadcrumb">
              <a href="/">Home</a> / <span>Maps</span>
            </nav>
            <h1 class="maps-page-title">Occultation Observation Locations</h1>
            <p class="maps-page-description">
              Interactive maps showing locations where our group has conducted occultation observations. 
              Click on any marker to view details about the observation.
            </p>
          </header>

          <div class="map-wrapper">
            <OccultationMaps compact={false} showHeaderLink={false} />
          </div>
        </div>
      </div>
    </main>

    <footer class="footer" role="contentinfo">
      <div class="container">
        <div class="footer-content">
          <p>&copy; 2025 Occultation Group at UVA. All rights reserved.</p>
          <ul class="footer-links">
            <li><a href="mailto:pvz5hs@virginia.edu">Contact</a></li>
            <li><a href="https://github.com/occultation-research-group" target="_blank" rel="noopener noreferrer">GitHub</a></li>
            <li><a href="/rss.xml">RSS</a></li>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  .maps-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 0;
  }
  .map {
    width: 100%;
    height: 100%;
  }

  .maps-page-header {
    margin-bottom: 2rem;
  }

  .breadcrumb {
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .breadcrumb a {
    color: var(--accent-color);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .maps-page-title {
    margin: 0 0 1rem 0;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
  }


  .maps-page-description {
    margin: 0;
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 800px;
  }


  @media (max-width: 768px) {
    .maps-page {
      padding: 1rem 0;
    }

    .maps-page-title {
      font-size: 2rem;
    }

    .map {
      height: 400px !important;
    }
  }
</style>
