---
import Results from '../components/Results.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Research Results - Publications, images, and data from the Occultation Research Group" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Results - The Occultation Group at UVA</title>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <header class="header" role="banner">
      <div class="container">
        <div class="header-content">
          <h1 class="site-title">
            <a href="/" style="color: inherit; text-decoration: none;">The Occultation Group at UVA</a>
          </h1>
          <nav class="nav" role="navigation" aria-label="Main navigation">
            <a href="/">Home</a>
            <a href="/results" aria-current="page">Results</a>
            <a href="/news">News</a>
            <a href="/about">About</a>
          </nav>
        </div>
      </div>
    </header>

    <main id="main-content" class="main" role="main">
      <div class="container">
        <header style="text-align: center; margin-bottom: 3rem;">
          <h1>Research Results</h1>
          <p style="font-size: 1.125rem; color: var(--text-secondary); max-width: 600px; margin: 0 auto;">
            Our latest contributions to asteroid profiles from stellar occultation studies 
            of trans-Neptunian objects and other small solar system bodies.
          </p>
        </header>
        
        <Results />
      </div>
    </main>

    <footer class="footer" role="contentinfo">
      <div class="container">
        <div class="footer-content">
          <p>&copy; 2025 The Occultation Group at UVA. All rights reserved.</p>
          <ul class="footer-links">
            <li><a href="mailto:pvz5hs@virginia.edu">Contact</a></li>
            <li><a href="https://github.com/occultation-research-group" target="_blank" rel="noopener noreferrer">GitHub</a></li>
            <li><a href="/rss.xml">RSS</a></li>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>
